{
  "name": "vast-library",
  "version": "4.1.0-beta.16",
  "description": "An intuitive standard IAB Vast XML generation API. Complient with specifications Vast 2.0 / 3.0 / 4.0 / 4.1",
  "author": "David Babel",
  "thanks": "https://www.paypal.me/devilhunter/4",
  "engines": {
    "node": ">= 8"
  },
  "main": "common/index.js",
  "types": "@types/globals.type.d.ts",
  "scripts": {
    "start": "open ./coverage/lcov-report/index.html",
    "build-all": "yarn clean-all && yarn build-api && yarn build-ts",
    "clean-all": "yarn clean-api && yarn clean-ts",
    "build-ts": "tsc",
    "clean-ts": "tsc --build --clean",
    "test": "RUN_PUPPETEER_TESTS=true jest --coverage",
    "test:watch": "jest --watch",
    "build-api": "yarn build-v2 && yarn build-v3 && yarn build-v4 && yarn build-v4_1",
    "clean-api": "rimraf ./build ./generated",
    "build-v2": "ts-node ./bin/build.ts 2_0",
    "build-v3": "ts-node ./bin/build.ts 3_0",
    "build-v4": "ts-node ./bin/build.ts 4_0",
    "build-v4_1": "ts-node ./bin/build.ts 4_1",
    "clean-fixtures": "rimraf ./tests/**/fixtures/*.xml",
    "depcheck": "depcheck . --ignores=\"@types/*,puppeteer,jest-puppeteer\" --ignore-bin-package=true --skip-missing=true",
    "circular-dependencies": "madge --circular ./common ./builder ./parser ./validator",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "**/*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "jest-puppeteer",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/generated/",
      "/tests/"
    ]
  },
  "dependencies": {
    "array-flatten": "^2.1.2",
    "browser-or-node": "^1.2.1",
    "request": "^2.88.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@airbnb/node-memwatch": "^1.0.2",
    "@types/browserify": "^12.0.36",
    "@types/expect-puppeteer": "^3.3.1",
    "@types/fs-extra": "^5.0.5",
    "@types/jest": "^24.0.11",
    "@types/jest-environment-puppeteer": "^4.0.0",
    "@types/js-yaml": "^3.12.1",
    "@types/nock": "^9.3.1",
    "@types/prettier": "^1.16.3",
    "@types/puppeteer": "^1.12.3",
    "@types/request": "^2.48.1",
    "browserify": "^16.2.3",
    "codecov": "^3.3.0",
    "depcheck": "^0.7.2",
    "fs-extra": "^7.0.1",
    "http-server": "^0.11.1",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "jest-puppeteer": "^4.1.1",
    "js-yaml": "^3.13.1",
    "lint-staged": "^8.1.5",
    "madge": "^3.4.4",
    "nock": "^10.0.6",
    "prettier": "^1.17.0",
    "puppeteer": "^1.15.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tsify": "^4.0.1",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/DavidBabel/vast-library"
  },
  "license": "MIT",
  "keywords": [
    "ad",
    "ads",
    "adtech",
    "advertisement",
    "advertising",
    "vast",
    "vast2",
    "vast3",
    "vast4",
    "xml",
    "client",
    "generate",
    "generator",
    "generation",
    "validate",
    "validator",
    "validation",
    "iab",
    "video",
    "wrapper",
    "standard",
    "api"
  ]
}
